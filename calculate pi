#include<stdio.h>
#include<stdlib.h>
#include<time.h>//打印圆周率
int main() {
float pi = 0;
int i = 1;
const double eps = 1e-6; //精度保证5位
while ( 1.0/i > eps) {  //不适合用 for 语句
pi += 1.0/i;
i++;i++;
pi -= 1.0/i;
i++;i++;
}//what a brilliant code!
pi *= 4;
printf("%.5f\n",pi);
}
//前提已知圆周率无穷级数公式：π = 4 * (1 - 1/3 + 1/5 - 1/7 + 1/9 - ……)
